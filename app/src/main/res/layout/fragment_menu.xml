<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivDonaLibro"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                style="@style/ICONDONA"/>

            <TextView
                android:id="@+id/donaLibroTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TEXTMENU"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:text="@string/dona_libro"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivPrenotaPosto"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                style="@style/ICONPRENOTA" />

            <TextView
                android:id="@+id/prenotaPostoTv"
                android:layout_width="match_parent"
                style="@style/TEXTMENU"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:text="@string/prenota_posto"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivFeedback"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                style="@style/ICONFEEDBACK" />

            <TextView
                android:id="@+id/feedbackTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                style="@style/TEXTMENU"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:text="@string/lascia_un_feedback"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivPrestiti"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                style="@style/ICONPRESTITI" />

            <TextView
                android:id="@+id/prestitiTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                style="@style/TEXTMENU"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:text="@string/prestiti"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivImpostazioni"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                style="@style/ICONIMPOSTAZIONI" />

            <TextView
                android:id="@+id/impostazioniTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                style="@style/TEXTMENU"
                android:fontFamily="@font/cagliostro"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:text="@string/impostazioni"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>