<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/modificaAccountIv"
            style="@style/ICONPROFILO"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swModifica"
            style="@style/BACKGROUNDFEEDBACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:fontFamily="@font/cagliostro"
            android:minHeight="48dp"
            android:padding="5dp"
            android:text="@string/modifica" />

        <LinearLayout
            android:id="@+id/modificaAccountLlvertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/modificaAccountLlHorizontal2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomeAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/nomeModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cognomeAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/cognomeModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sessoAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/sessoModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/indirizzoAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/indirizzoModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/etaAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/etaModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cellulareAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/cellulareModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailAccountTv"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="@string/emailModifica"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/modificaAccountLlHorizontal1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nomeAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:inputType="textPersonName"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/cognomeAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:inputType="textPersonName"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/sessoAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:hint="@string/inserisci_m_o_f"
                    android:inputType="text"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/indirizzoAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:inputType="textPostalAddress"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/etaAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:inputType="number"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/cellulareAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:inputType="phone"
                    android:maxLength="30"
                    android:paddingTop="14dp"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/emailAccountEt"
                    style="@style/TEXTLIBRO"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:fontFamily="@font/cagliostro"
                    android:inputType="textEmailAddress"
                    android:maxLength="30" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnConferma"
            style="@style/BOTTONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cagliostro"
            android:text="@string/confermaModifica"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>

